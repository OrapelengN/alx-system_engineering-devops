#!/usr/bin/env bash
# Configures localhost to 127.0.0.2 and facebook.com to 8.8.8.8

# Modify /etc/hosts
sudo sed -i "s/127.0.0.1[[:space:]]\+localhost/127.0.0.2 localhost/" /etc/hosts
sudo sed -i "/facebook.com/d" /etc/hosts #Remove any previous facebook.com entry
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts

echo "localhost is now set to 127.0.0.2"
echo "facebook.com is now set to 8.8.8.8"
